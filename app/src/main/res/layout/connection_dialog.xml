<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/connectionDiagTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light Controller Connection"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:layout_margin="8sp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/black" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_baseline_warning_24"
            android:layout_marginBottom="10dp">
        </ImageView>
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you connected to the light controller's SSID?"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">
        </TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cancelConnectionBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_button_colored"
                    android:backgroundTint="@color/cancelBtn"
                    android:text="No" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33">
                </TextView>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/confirmConnectionBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_button_colored"
                    android:backgroundTint="@color/confirmBtn"
                    android:text="Yes" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>