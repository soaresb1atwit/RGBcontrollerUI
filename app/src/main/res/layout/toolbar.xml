<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_second"
    app:elevation="0dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_buttons_bottom"
        android:elevation="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp">

            <ImageButton
                android:id="@+id/powerBtn"
                android:layout_width="55dip"
                android:layout_height="55dip"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/power_btn"></ImageButton>

            <ImageButton
                android:id="@+id/settingsBtn"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:backgroundTint="@color/button"
                android:scaleType="fitXY"
                android:src="@drawable/settings_btn"></ImageButton>
            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Title"
                android:textColor="@color/text"
                android:textSize="16dp"
                android:textStyle="bold"
                android:visibility="gone">
            </TextView>
            <ImageButton
                android:id="@+id/searchBtn"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:src="@drawable/search_btn"
                android:visibility="gone"
                >
            </ImageButton>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


</com.google.android.material.appbar.AppBarLayout>